<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:backgroundTint="@color/background_color">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="20dp">



			<ImageView
				android:layout_width="179dp"
				android:layout_height="176dp"
				android:layout_gravity="center"
				android:src="@drawable/ic_signup" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:fontFamily="@font/poppins_bold"
				android:gravity="center|start"
				android:paddingTop="3dp"
				android:text="Profile"
				android:textAppearance="@style/AppbarTitle"
				android:textColor="@color/titleColor"
				android:textSize="32sp" />


			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:fontFamily="@font/poppins_semibold"
				android:gravity="center|start"
				android:text="Name"
				android:layout_marginTop="16dp"
				android:textColor="@color/colorAccent"
				android:textSize="12sp" />

			<com.google.android.material.textfield.TextInputEditText
				android:id="@+id/edit_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="@font/poppins_semibold"
				android:hint="Name" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:fontFamily="@font/poppins_semibold"
				android:gravity="center|start"
				android:text="Email"
				android:layout_marginTop="16dp"
				android:textColor="@color/colorAccent"
				android:textSize="12sp" />

			<com.google.android.material.textfield.TextInputEditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/edit_email"
				android:fontFamily="@font/poppins_semibold"
				android:hint="Email" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:visibility="gone"
				android:fontFamily="@font/poppins_semibold"
				android:gravity="center|start"
				android:text="Number"
				android:layout_marginTop="16dp"
				android:textColor="@color/colorAccent"
android:textSize="12sp" />


			<LinearLayout
				android:id="@+id/layout_change_number"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#f2f2f2"
				android:visibility="gone"
				android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="top"
					android:drawableEnd="@drawable/ic_edit"
					android:drawablePadding="8dp"
					android:fontFamily="@font/poppins_semibold"
					android:gravity="center|start"
					android:paddingStart="8dp"
					android:paddingTop="8dp"
					android:id="@+id/text_change_number"
					android:paddingEnd="8dp"
					android:paddingBottom="8dp"
					android:text="9840024137"
					android:textSize="16sp" />
			</LinearLayout>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:fontFamily="@font/poppins_semibold"
				android:gravity="center|start"
				android:text="Mobile"
				android:layout_marginTop="16dp"
				android:textColor="@color/colorAccent"
				android:textSize="12sp" />

			<LinearLayout
				android:id="@+id/layout_mobile"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#f2f2f2"
				android:orientation="vertical">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="top"
					android:drawablePadding="8dp"
					android:drawableEnd="@drawable/ic_edit"
					android:backgroundTint="@color/hintColor"
					android:fontFamily="@font/poppins_semibold"
					android:gravity="center|start"
					android:paddingStart="8dp"
					android:paddingTop="8dp"
					android:id="@+id/text_mobile"
					android:paddingEnd="8dp"
					android:paddingBottom="8dp"
					tools:text="123456789"
					android:hint="Mobile Number"
					android:textSize="16sp" />
			</LinearLayout>


			<LinearLayout
				android:id="@+id/layout_choose_campus"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#f2f2f2"
				android:orientation="vertical"/>


			<com.google.android.material.button.MaterialButton
				android:background="@drawable/button_bg"
				android:id="@+id/button_update"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:fontFamily="@font/poppins_semibold"
				android:text="@string/label_update"
				android:textSize="18sp"
				android:textStyle="bold"
				app:backgroundTint="@color/colorAccent" />


		</LinearLayout>

	</androidx.core.widget.NestedScrollView>

